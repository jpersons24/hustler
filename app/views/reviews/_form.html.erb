<% if flash[:errors]%>
    <% flash[:errors].each do |e| %>
        <p style="color:red;"><%= e %></p>
    <% end %>
<% end %>

<%= form_for @review do |f| %>
<%= f.label '"Employee":' %><br>
<%= f.collection_select :user_id, @users, :id, :name %><br>
<%= f.label "Worker:" %><br>
<%= f.collection_select :worker_id, @workers, :id, :name %><br>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label :content %><br>
<%= f.text_area :content %><br>
<%= f.submit %>
<% end %>