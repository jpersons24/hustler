<% if flash[:errors]%>
    <% flash[:errors].each do |e| %>
        <p style="color:white;"><%= e %></p>
    <% end %>
<% end %>

<%= form_for @review do |f| %>
    <div class='form-input'>
    <%= f.label "Worker:" %>
    <%= f.collection_select :worker_id, @workers, :id, :name %>
    </div>

    <div class='form-input'>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>

    <div class='form-input'>
    <%= f.label :content %> <br>
    <%= f.text_area :content %>
    </div>

    <%= f.submit class: "form-btn" %>
<% end %>