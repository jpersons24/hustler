<% if flash[:errors]%>
    <% flash[:errors].each do |e|%>
    <p style="color:red;"><%= e %></p>
    <% end %>
<% end %>

<%= form_for @task do |f| %>
<%= f.label :description %><br>
<%= f.text_field :description %><br>
<%= f.label :cost %><br>
<%= f.number_field :cost, in: 1..1000 %><br><br>
<%= f.submit %>
<% end %><br>
<%= button_to "Back to All Tasks", tasks_path, method: :get %>
