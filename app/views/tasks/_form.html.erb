<% if flash[:errors]%>
    <% flash[:errors].each do |e|%>
        <p style="color:red;"><%= e %></p>
    <% end %>
<% end %>

<%= form_for @task do |f| %>
    <%= f.label :user %>
    <%= f.collection_select :user_id, User.all, :id, :name %><br>
    <%= f.label "Skill desired:" %>
    <%= f.collection_select :skill_id, Skill.all, :id, :name %> <br>
    <%= f.label "Description:" %><br>
    <%= f.text_area :description %><br>
    <%= f.label "Cost:" %> $
    <%= f.number_field :cost, in: 1..1000 %><br>
    <%= f.label "Deadline:" %>
    <%= f.date_field :deadline %><br>
    <%# f.label :worker %><br>
    <%# f.collection_select :worker_id, Worker.all, :id, :name %><br>
    <%= f.submit "Request Task" %>
<% end %><br>

<%= button_to "Back to All Tasks", tasks_path, method: :get %>


