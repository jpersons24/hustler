<% if flash[:errors]%>
    <% flash[:errors].each do |e|%>
    <p style="color:red;"><%= e %></p>
    <% end %>
<% end %>

<%= form_for @task do |f| %>
    <%= f.label :user %><br>
    <%= f.collection_select :user_id, User.all, :id, :name %><br>
    <%= f.label :skill %>
    <%= f.collection_select :skill_id, Skill.all, :id, :name %> <br>
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>
    <%= f.label :cost %><br>
    $<%= f.number_field :cost, in: 1..1000 %><br><br>
    <%= f.label :deadline %><br>
    <%= f.date_select :deadline %><br>
    <%= f.label :worker %><br>
    <%= f.collection_select :worker_id, Worker.all, :id, :name %><br>
    <%= f.submit "Request Task" %>
<% end %><br>

<%= button_to "Back to All Tasks", tasks_path, method: :get %>


