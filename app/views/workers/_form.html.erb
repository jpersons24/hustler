<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
      <p style="color:red;"><%= e %></p>
    <% end %>
<% end %>

<%= form_for @worker do |f| %>
   <%= f.label "Name:" %>
   <%= f.text_field :name %> <br>
   <%= f.label "Bio:" %>
   <%= f.text_area :bio %> <br>
   <%= f.submit %>
<% end %>