<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
      <p style="color:white;"><%= e %></p>
    <% end %>
<% end %>


<%= form_for @worker do |f| %>
  <div class='form-input'>
    <%= f.label "Name:" %>
    <%= f.text_field :name %>
  </div>

  <div class='form-input'>
    <%= f.label "Bio:" %>
    <%= f.text_area :bio %> <br>
  </div>

  <%= f.submit class: "form-btn" %>
<% end %>
