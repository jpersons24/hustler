<h3>This is <%= @worker.name %>'s page!</h3>

<img src="<%= @worker.photo %>" alt="<%= @worker.name %>">

<h5>Bio: <%= @worker.bio %></h5>

<h5>Age: <%= @worker.age %></h5>

<h5>Skills: </h5>
    <% @worker.skills.each do |s| %>
        <ul>
            <li><%= s.name %> | <%= s.category %></li>
        </ul>
    <% end %>

<h5>Reviews:</h5>
    <% if @worker.reviews.length < 1 %>
        <p>No Reviews by this worker yet!</p>
    <% else %>
        <ul>
            <% @worker.reviews.each do |r| %>
                <li><%= r.title %></li><br>
                <li><%= r.content %></li>
            <% end %>
        </ul>
    <% end %>

<br><br>

<%= button_to 'Edit Worker', edit_worker_path(@worker), method: :get %>

<br><br>

<%= button_to "Add a Skill", new_worker_skill_path, method: :get %>

<br><br>

<%= button_to "See all Tasks", tasks_path, method: :get %>

<br><br>

<p>Thinking about deleting this User?</p>
<%= button_to "Delete Worker",  worker_path(@worker), method: :delete%>